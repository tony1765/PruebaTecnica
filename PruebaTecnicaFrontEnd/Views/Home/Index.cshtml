<div class="row">
    <div class="col-md-4">
        <h2>Autos</h2>
        <div>
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display responsive nowrap" id="TablaListado" width="100%">
                <thead>
                    <tr>
                        <th width="10%" data-priority="1">Sku</th>
                        <th width="20%" data-priority="2">Descripción</th>
                        <th width="20%" data-priority="3">Marca</th>
                        <th width="20%" data-priority="4">Cantidad</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </div>

</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>



<script type="text/javascript">

    $(document).ready(function () {
        listarAutos();
    });

    var listarAutos = function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ObtenerAutos", "Autos")',
            datatype: "json",
            cache: false,
            success: function (data) {
                debugger
            var $filas='';
 
            $.each(data, function(i ,item)
            {
                var $Sku = '<td class=".edit" title="">' + item.Sku + '</td>';
                var $Descripcion = '<td class=".edit" title="">' + item.Descripcion + '</td>';
                var $Marca = '<td class=".edit" title="">' + item.Marca.Descripcion + '</td>';
                var $Cantidad = '<td class=".edit" title="">' + item.Cantidad + '</td>';
                  
                $filas += '<tr class="odd" role="row">';
                $filas += $Sku;
                $filas += $Descripcion;
                $filas += $Marca;
                $filas += $Cantidad;
 
            });
                $("#TablaListado tbody").html($filas);

            }
        });
    };

</script>